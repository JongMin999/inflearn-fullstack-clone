# syntax=docker/dockerfile:1.5

FROM node:20-alpine AS base
RUN npm i -g pnpm
WORKDIR /app

# 1) deps
FROM base AS deps
COPY package.json pnpm-lock.yaml ./
RUN --mount=type=cache,id=pnpm-store,target=/pnpm/store \
    pnpm install --frozen-lockfile --store-dir=/pnpm/store

# 2) builder
FROM base AS builder

# 빌드에 필요한 "공개" 값만 받기 (시크릿은 빌드에 넣지 말 것)
ARG NODE_ENV=production
ARG API_URL
ARG USE_HTTPS
ARG NEXT_PUBLIC_PORTONE_STORE_ID
ARG NEXT_PUBLIC_PORTONE_CHANNEL_KEY
ARG NEXT_PUBLIC_KAKAO_CLIENT_ID

ENV NODE_ENV=${NODE_ENV}
ENV API_URL=${API_URL}
ENV USE_HTTPS=${USE_HTTPS}
ENV NEXT_PUBLIC_PORTONE_STORE_ID=${NEXT_PUBLIC_PORTONE_STORE_ID}
ENV NEXT_PUBLIC_PORTONE_CHANNEL_KEY=${NEXT_PUBLIC_PORTONE_CHANNEL_KEY}
ENV NEXT_PUBLIC_KAKAO_CLIENT_ID=${NEXT_PUBLIC_KAKAO_CLIENT_ID}

COPY --from=deps /app/node_modules ./node_modules
COPY . .

# 필요하면 유지(프론트에서 prisma generate가 정말 필요한 경우만)
RUN pnpm prisma generate || true

RUN pnpm build

# 3) runner (최소 런타임)
FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# standalone 결과만 복사 (여기엔 런타임에 필요한 node_modules 일부도 포함됨)
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static
COPY --from=builder /app/public ./public

EXPOSE 3000
CMD ["node", "server.js"]